{
	"name": "adofai-gg",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "vite package",
		"preview": "vite preview",
		"test": "pnpm build && playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "pnpm run \"/lint:.*/\"",
		"lint:stylelint": "pnpm stylelint --fix \"src/**/*.{svelte,css,scss}\"",
		"lint:prettier": "prettier --check --plugin-search-dir=. .",
		"lint:eslint": "eslint --max-warnings=0 .",
		"format": "prettier --write --plugin-search-dir=. .",
		"postinstall": "svelte-kit sync && husky install"
	},
	"files": [
		".svelte-kit",
		"build",
		"server.js"
	],
	"devDependencies": {
		"@adofai-gg/ui": "1.2.0-beta.28",
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@fluent/bundle": "^0.18.0",
		"@playwright/test": "^1.40.1",
		"@sveltejs/adapter-node": "^2.0.2",
		"@sveltejs/kit": "2.5.28",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.7",
		"@types/node": "^20.10.5",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"autoprefixer": "^10.4.16",
		"babel-loader": "^9.1.3",
		"clsx": "^2.0.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-svelte": "2.36.0-next.13",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"postcss": "^8.4.32",
		"postcss-html": "^1.5.0",
		"postcss-load-config": "^5.0.2",
		"postcss-scss": "^4.0.9",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.2.6",
		"rimraf": "^5.0.5",
		"sass": "^1.69.5",
		"stylelint": "^16.0.2",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-standard-scss": "^12.0.0",
		"stylelint-order": "^6.0.4",
		"svelte": "5.0.0-next.257",
		"svelte-check": "^3.6.2",
		"svelte-eslint-parser": "^0.41.1",
		"svelte-icons": "^2.1.0",
		"svelte-loader": "^3.2.3",
		"svelte-preprocess": "^5.1.2",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.3.3",
		"vite-plugin-glob": "^0.3.2",
		"vite-plugin-preload": "^0.3.1"
	},
	"type": "module",
	"dependencies": {
		"@builder.io/partytown": "^0.8.1",
		"compression": "^1.7.4",
		"express": "^4.19.2",
		"github-markdown-css": "^5.5.0",
		"sharp": "^0.33.1"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,svelte}": "eslint --cache --fix",
		"*.{js,ts,jsx,tsx,svelte,css,scss,md}": "prettier --ignore-path .gitignore --write"
	},
	"packageManager": "pnpm@9.3.0"
}
